<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Fantasia</title>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/main.css">

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="//cdn.socket.io/socket.io-1.2.1.js"></script>

    <script src="/fatPack.js"></script>
    <script>
      $(function() {
        require("./entries/index");
      });
    </script>
  </head>

  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbaractions navbar-toggle collapsed" data-toggle="collapse" data-target="#navbaractions-group">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <span class="navbar-brand">Fantasia</span>
        </div>

        <div class="navbaractions collapse navbar-collapse hidden" id="navbaractions-group">
          <ul class="nav navbar-nav navbar-right">
            <li><a class="edit">Edit</a></li>
            <li><a class="exit">Logout</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="room container hidden">
      <div class="row">
        <h1 class="header col-xs-12">Welcome, user</h1>
      </div>

      <div class="row">
        <h2 class="title col-xs-12">
          <div class="content" contenteditable="false">Room</div>
        </h2>
      </div>

      <div class="row">
        <div class="description col-xs-12">
          <div class="content" contenteditable="false">Description</div>
        </div>
      </div>

      <div class="row">
        <div class="exits col-xs-12">Exits</div>
      </div>

      <div class="row">
        <form class="execute col-xs-10">
          <div class="form-group">
            <label for="command" class="sr-only control-label">Command</label>
            <input id="command" class="command form-control" placeholder="Command" type="text"></input>
          </div>
        </form>
        <button type="submit" class="help btn btn-default">Help</button>
      </div>
    </div>

    <div class="help popover">
      <div class="help container-fluid">
        <div class="row">
          <dl class="col-xs-12">
            <dt><kbd class="command">refresh</kbd></dt>
            <dd>Refresh</dd>

            <dt><kbd class="command">create exit <var>exit name</var></kbd></dt>
            <dd>Create exit</dd>

            <dt><kbd class="command">start link <var>Room A's exit name</var></kbd></dt>
            <dd>Start link between rooms</dd>

            <dt><kbd class="command">close link <var>Room B's exit name</var></kbd></dt>
            <dd>Close link between rooms</dd>

            <dt><kbd class="command">rename exit <var>old exit name</var>:<var>new exit name</var></kbd></dt>
            <dd>Rename exit</dd>

            <dt><kbd class="command">rename room <var>new room name</var></kbd></dt>
            <dd>Rename room</dd>

            <dt><kbd class="command">describe room <var>new room description</var></kbd></dt>
            <dd>Describe room</dd>

            <dt><kbd class="command">go <var>exit name</var></kbd></dt>
            <dd>Move through exit</dd>
          </dl>
        </div>
      </div>
    </div>
  </body>
</html>
